{
  "compilerOptions": {
    "target": "ES2020",
    "module": "preserve",
    "lib": ["DOM", "ES2020"],
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
